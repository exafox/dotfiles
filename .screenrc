# Disable the startup message
startup_message off

hardstatus alwayslastline 
hardstatus string '%{= kG}[ %{G}%H %{g}][%3= %{=kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B}%Y-%m-%d %{W}%c %{g}]'

activity "%C -> %n%f %t activity!"
bell "%C -> %n%f %t bell!~"
pow_detach_msg "BYE"
vbell_msg " *beep* "
bind .
bind ^\
bind \\
bind ^s
bind G screen -t 'Google' links www.google.com
bind K
bind p paste .
bind V screen -t 'vim' 1 vim
bind X lockscreen'
bindkey -k kP copy'
bindkey -k k7 prev
bindkey -k k8 next


screen -t main
screen -t admin
screen -t dev
screen -t py
screen -t server
screen -t vsql
screen -t wtflol



shelltitle "$ |bash"

