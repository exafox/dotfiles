# Disable the startup message
startup_message off


shelltitle "$ |bash"
nonblock on                          


# Bind F11 and F12 (NOT F1 and F2) to previous and next screen window
bindkey -k k7  prev
bindkey -k k8  next


screen -t admin
screen -t log
screen -t main
screen -t server1
screen -t server2
screen -t wtflol	

hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}]'
